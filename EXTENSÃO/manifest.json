{
  "manifest_version": 3,
  "name": "Minha Extensão",
  "description": "Uma extensão simples do Chrome",
  "version": "1.0",
  "permissions": ["storage" ,"tabs", "activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": [
    "https://www.youtube.com/"
  ]
}
